<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    >

    <TextView android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/election_results_title"
        android:textColor="@color/black"
        android:textSize="18sp"
        />

    <TextView android:id="@+id/county"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:textColor="@color/black"
        android:textStyle="italic"
        android:maxLines="1"
        android:ellipsize="end"
        />

    <TextView android:id="@+id/obama_label"
        android:layout_height="wrap_content"
        android:layout_width="70dp"
        android:layout_below="@id/county"
        android:textColor="@color/black"
        />

    <TextView android:id="@+id/obama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/county"
        android:layout_toRightOf="@id/obama_label"
        android:textColor="@color/black"
        />

    <TextView android:id="@+id/romney_label"
        android:layout_height="wrap_content"
        android:layout_width="70dp"
        android:layout_below="@id/obama_label"
        android:textColor="@color/black"
        />

    <TextView android:id="@+id/romney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/obama"
        android:layout_toRightOf="@id/romney_label"
        android:textColor="@color/black"
        />

</RelativeLayout>